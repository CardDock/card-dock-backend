generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model cards_yugioh {
  id              String   @id @default(uuid()) @db.Uuid
  original_name   String
  id_external_api String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  cards_yugioh_user cards_yugioh_user[] @relation("CardsInstances")
}

model cards_yugioh_user {
  id             String   @id @default(uuid()) @db.Uuid
  id_user        String   @db.Uuid
  id_card_yugioh String   @db.Uuid
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  user user         @relation(name: "CardsUser", fields: [id_user], references: [id])
  card cards_yugioh @relation(name: "CardsInstances", fields: [id_card_yugioh], references: [id])
}

model user {
  id             String   @id @default(uuid()) @db.Uuid
  id_driver_user String
  email          String?
  username       String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  cards_yugioh_user cards_yugioh_user[] @relation("CardsUser")
}
