{
	"testEnvironment": "node",
	"moduleFileExtensions": ["ts", "js", "json", "node"],
	"rootDir": "./",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"coverageDirectory": "./coverage/e2e",
	"testRegex": ".*\\.e2e-spec\\.ts$",
	"collectCoverageFrom": ["**/*.(t|j)s"],
	"moduleNameMapper": {
		"^@src/(.*)$": "<rootDir>/src/$1"
	}
}
