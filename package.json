	"scripts": {
		"postinstall": "pnpm husky init",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "pnpm test:unit && pnpm test:e2e",
		"test:e2e": "jest --config ./jest-e2e.config.json",
		"test:unit": "jest --config ./jest.config.json",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"prepare": "husky",
		"prisma:migrate": "pnpx prisma migrate dev",
		"prisma:migrate-only": "pnpm prisma:migrate -- --create-only",
		"prisma:push": "pnpx prisma db push",
		"prisma:seed": "pnpx tsx prisma/seed/seed.ts",
		"prisma:dev": "pnpm prisma:push && pnpm prisma:seed",
		"sonar": "sonar-scanner"
	},
